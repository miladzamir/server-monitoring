<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="assets/css/bootstrap.min.css" crossorigin="anonymous">

    <title>ServerMonitoring System</title>
</head>
<body>
<div class="container-fluid">
    <div class="col-12">
        <form>

            <div class="form-group">
                <label for="serverIp">Server Ip</label>
                <input type="text" name="serverIp" class="form-control" id="serverIp" placeholder="For Example: 192.168.1.1">
            </div>

            <button type="submit" class="btn btn-primary">Start Monitoring...</button>
        </form>
    </div>

    <div class="col-12">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
{{/*                <th scope="col">remote_addr</th>*/}}
{{/*                <th scope="col">local_addr</th>*/}}
{{/*                <th scope="col">ping_at</th>*/}}
{{/*                <th scope="col">live</th>*/}}
            </tr>
            </thead>
            <tbody>
            {{range $index, $element := .}}
            <tr>
                    <td>{{$element}}</td>
            </tr>
            {{ end }}
            </tbody>
        </table>
    </div>
</div>

<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="assets/js/jquery-3.2.1.slim.min.js" crossorigin="anonymous"></script>
<script src="assets/js/popper.min.js" crossorigin="anonymous"></script>
<script src="assets/js/bootstrap.min.js" crossorigin="anonymous"></script>
</body>
</html>